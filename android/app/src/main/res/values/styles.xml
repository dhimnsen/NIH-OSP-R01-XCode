<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="table_cell">
        <item name="android:background">#80ffffff</item>
        <item name="android:layout_margin">3dp</item>

    </style>

    <style name="pager_tab_strip"  parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#3e2723</item>
    </style>

    <style name="table_heading_gray">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/table_cell_shape_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">@dimen/activity_small_margin</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_heading_min">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/table_cell_shape_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
         <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_cell_min">
        <item name="android:background">#80ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_text_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="MyCustomTabText"  parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
